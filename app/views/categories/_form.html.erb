<% if @category.errors.any? %>
  <h2>There were errors saving your category</h2>
  <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @category do |f| %>
  <fieldset>
    <div class="fields">
      <%= f.label :category %>
      <%= f.text_field :category %>
    </div>
    <div class="fields">
      <%= f.label :min_temp %>
      <%= f.text_field :min_temp %>
    </div>
    <div class="fields">
      <%= f.label :max_temp %>
      <%= f.text_field :max_temp %>
    </div>
    
  </fieldset>
  <%= f.submit %>
<% end %>