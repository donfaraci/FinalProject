    <%= label_tag :zip, "ENTER YOUR ZIPCODE TO FIND YOUR WEATHER"  %><br>
    <%= text_field_tag :zip,'', placeholder: "e.g. 22042 " %>
    <%= submit_tag "Get Weather" %>
<% end %>


<% if @weather_lookup.temperature.present? %>

<%= @weather_lookup.temperature %>
