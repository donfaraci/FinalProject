<% @categories.each do |category| %>
	
<% if category.min_temp == nil %>
	<% 'No minimum temperature in category object' %>
	<% elsif category.max_temp > @weather_lookup.temperature && category.min_temp < @weather_lookup.temperature %>
		<% category.shirts.each do |shirt| %>
			<%= shirt.name %>
			<% end%>
	<% else %>
	<% 'There are no clothes appropriate for the weather' %>
	<% end %>
	<%end %>

<% end %>