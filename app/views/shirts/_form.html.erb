<% if @shirt.errors.any? %>
  <h2>There were errors saving your shirt</h2>
  <ul>
    <% @shirt.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>



<%= form_for @shirt do |f| %>
  <fieldset>
      <div class="field">
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, current_user.categories, :id, :category %>
    
    <div class="fields">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
     <div class="fields">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
  </fieldset>
  <%= f.submit %>
<% end %>
</form>